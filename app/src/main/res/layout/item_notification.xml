<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/shape_rectangle_gray_with_rounded_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/item_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title Notification"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/font"/>

        <TextView
            android:id="@+id/item_notification_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have less than 12 days left to get into the habit of playing sports"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/font"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>